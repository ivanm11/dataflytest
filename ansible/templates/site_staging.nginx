server {
    listen 80;
    server_name {{ host_staging }};

    location = /robots.txt {
            rewrite (.*) /static/robots.txt;
    }

    location = /favicon.ico {
            rewrite (.*) /static/favicon.ico;
    }

    location /static/ {
            root {{ path_staging }}/www;
    }

    location / {
            include uwsgi_params;
            uwsgi_pass unix:///tmp/uwsgi.sock;
    }
}
